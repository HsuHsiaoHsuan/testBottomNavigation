<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_card"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.36"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_eva" />

        <Space
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/tv_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哩程數"
            android:textColor="@android:color/white"
            android:textSize="@dimen/home_card_title_size" />

    </LinearLayout>

    <View
        android:layout_width="0.9dp"
        android:layout_height="match_parent"
        android:background="#2bc174" />

    <View
        android:layout_width="0.1dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

    <View
        android:layout_width="0.9dp"
        android:layout_height="match_parent"
        android:background="#05831f" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.64">

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_above="@+id/ll_more"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="999,999"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/home_exchange_history"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="7dp"
                android:layout_height="0dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_card_history" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>